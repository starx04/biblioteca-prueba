<odoo>
  <data>
    
    <!-- ======== AUTOR ======== -->
    
    <!-- Autor Tree View -->
    <record model="ir.ui.view" id="biblioteca_autor_tree">
      <field name="name">Autor Tree</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- Autor Form View -->
    <record model="ir.ui.view" id="biblioteca_autor_form">
      <field name="name">Autor Form</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <field name="bio"/>
              <field name="book_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Autor List View -->
    <record model="ir.ui.view" id="biblioteca_autor_list">
      <field name="name">Autor List</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
        </list>
      </field>
    </record>

    <!-- Autor Action Window -->
    <record model="ir.actions.act_window" id="biblioteca_autor_action">
      <field name="name">Autores</field>
      <field name="res_model">biblioteca.autor</field>
      <field name="view_mode">tree,list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crear un nuevo autor
        </p>
      </field>
    </record>

    <!-- ======== EDITORIAL ======== -->
    
    <!-- Editorial Tree View -->
    <record model="ir.ui.view" id="biblioteca_editorial_tree">
      <field name="name">Editorial Tree</field>
      <field name="model">biblioteca.editorial</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- Editorial Form View -->
    <record model="ir.ui.view" id="biblioteca_editorial_form">
      <field name="name">Editorial Form</field>
      <field name="model">biblioteca.editorial</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="address"/>
                <field name="phone"/>
                <field name="email"/>
              </group>
            </group>
            <notebook>
              <page string="Libros">
                <field name="book_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Editorial List View -->
    <record model="ir.ui.view" id="biblioteca_editorial_list">
      <field name="name">Editorial List</field>
      <field name="model">biblioteca.editorial</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="phone"/>
          <field name="email"/>
        </list>
      </field>
    </record>

    <!-- Editorial Action Window -->
    <record model="ir.actions.act_window" id="biblioteca_editorial_action">
      <field name="name">Editoriales</field>
      <field name="res_model">biblioteca.editorial</field>
      <field name="view_mode">tree,list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crear una nueva editorial
        </p>
      </field>
    </record>

    <!-- ======== USUARIO ======== -->
    
    <!-- Usuario Tree View -->
    <record model="ir.ui.view" id="biblioteca_usuario_tree">
      <field name="name">Usuario Tree</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <!-- Usuario Form View -->
    <record model="ir.ui.view" id="biblioteca_usuario_form">
      <field name="name">Usuario Form</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="email"/>
                <field name="phone"/>
                <field name="active"/>
                <field name="member_since"/>
              </group>
            </group>
            <notebook>
              <page string="Préstamos">
                <field name="loan_ids"/>
              </page>
              <page string="Multas">
                <field name="fine_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Usuario List View -->
    <record model="ir.ui.view" id="biblioteca_usuario_list">
      <field name="name">Usuario List</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="email"/>
          <field name="phone"/>
          <field name="active"/>
          <field name="member_since"/>
        </list>
      </field>
    </record>

    <!-- Usuario Action Window -->
    <record model="ir.actions.act_window" id="biblioteca_usuario_action">
      <field name="name">Usuarios</field>
      <field name="res_model">biblioteca.usuario</field>
      <field name="view_mode">tree,list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crear un nuevo usuario
        </p>
      </field>
    </record>

    <!-- ======== PERSONAL ======== -->
    
    <!-- Personal Tree View -->
    <record model="ir.ui.view" id="biblioteca_personal_tree">
      <field name="name">Personal Tree</field>
      <field name="model">biblioteca.personal</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="role"/>
        </tree>
      </field>
    </record>

    <!-- Personal Form View -->
    <record model="ir.ui.view" id="biblioteca_personal_form">
      <field name="name">Personal Form</field>
      <field name="model">biblioteca.personal</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="role"/>
                <field name="employee_id"/>
              </group>
            </group>
            <group>
              <field name="notes"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Personal List View -->
    <record model="ir.ui.view" id="biblioteca_personal_list">
      <field name="name">Personal List</field>
      <field name="model">biblioteca.personal</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="role"/>
          <field name="employee_id"/>
        </list>
      </field>
    </record>

    <!-- Personal Action Window -->
    <record model="ir.actions.act_window" id="biblioteca_personal_action">
      <field name="name">Personal</field>
      <field name="res_model">biblioteca.personal</field>
      <field name="view_mode">tree,list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crear un nuevo empleado
        </p>
      </field>
    </record>

    <!-- ======== LIBRO ======== -->
    
    <!-- Libro Tree View -->
    <record model="ir.ui.view" id="biblioteca_libro_tree">
      <field name="name">Libro Tree</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="available_copies"/>
          <field name="copies"/>
        </tree>
      </field>
    </record>

    <!-- Libro Form View -->
    <record model="ir.ui.view" id="biblioteca_libro_form">
      <field name="name">Libro Form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="isbn"/>
                <field name="editorial_id"/>
              </group>
              <group>
                <field name="copies"/>
                <field name="available_copies"/>
              </group>
            </group>
            <group>
              <field name="description"/>
            </group>
            <notebook>
              <page string="Autores">
                <field name="author_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Libro List View -->
    <record model="ir.ui.view" id="biblioteca_libro_list">
      <field name="name">Libro List</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="isbn"/>
          <field name="editorial_id"/>
          <field name="copies"/>
          <field name="available_copies"/>
        </list>
      </field>
    </record>

    <!-- Libro Action Window -->
    <record model="ir.actions.act_window" id="biblioteca_libro_action">
      <field name="name">Libros</field>
      <field name="res_model">biblioteca.libro</field>
      <field name="view_mode">tree,list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crear un nuevo libro
        </p>
      </field>
    </record>

    <!-- ======== PRESTAMO ======== -->
    
    <!-- Prestamo Tree View -->
    <record model="ir.ui.view" id="biblioteca_prestamo_tree">
      <field name="name">Prestamo Tree</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="usuario_id"/>
          <field name="libro_id"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <!-- Prestamo Form View -->
    <record model="ir.ui.view" id="biblioteca_prestamo_form">
      <field name="name">Prestamo Form</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="usuario_id"/>
                <field name="libro_id"/>
                <field name="personal_id"/>
              </group>
              <group>
                <field name="state"/>
                <field name="multa_amount"/>
              </group>
            </group>
            <group>
              <group string="Fechas">
                <field name="fecha_prestamo"/>
                <field name="fecha_devolucion_estimada"/>
                <field name="fecha_devolucion_real"/>
              </group>
            </group>
            <notebook>
              <page string="Multas">
                <field name="multa_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Prestamo List View -->
    <record model="ir.ui.view" id="biblioteca_prestamo_list">
      <field name="name">Prestamo List</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="usuario_id"/>
          <field name="libro_id"/>
          <field name="fecha_prestamo"/>
          <field name="fecha_devolucion_estimada"/>
          <field name="state"/>
          <field name="multa_amount"/>
        </list>
      </field>
    </record>

    <!-- Prestamo Action Window -->
    <record model="ir.actions.act_window" id="biblioteca_prestamo_action">
      <field name="name">Préstamos</field>
      <field name="res_model">biblioteca.prestamo</field>
      <field name="view_mode">tree,list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crear un nuevo préstamo
        </p>
      </field>
    </record>

    <!-- ======== MULTA ======== -->
    
    <!-- Multa Tree View -->
    <record model="ir.ui.view" id="biblioteca_multa_tree">
      <field name="name">Multa Tree</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="usuario_id"/>
          <field name="amount"/>
          <field name="paid"/>
        </tree>
      </field>
    </record>

    <!-- Multa Form View -->
    <record model="ir.ui.view" id="biblioteca_multa_form">
      <field name="name">Multa Form</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="prestamo_id"/>
                <field name="usuario_id"/>
                <field name="amount"/>
                <field name="paid"/>
              </group>
            </group>
            <group>
              <field name="reason"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Multa List View -->
    <record model="ir.ui.view" id="biblioteca_multa_list">
      <field name="name">Multa List</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="usuario_id"/>
          <field name="prestamo_id"/>
          <field name="amount"/>
          <field name="paid"/>
        </list>
      </field>
    </record>

    <!-- Multa Action Window -->
    <record model="ir.actions.act_window" id="biblioteca_multa_action">
      <field name="name">Multas</field>
      <field name="res_model">biblioteca.multa</field>
      <field name="view_mode">tree,list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crear una nueva multa
        </p>
      </field>
    </record>

    <!-- ======== MENU ======== -->
    
    <!-- Top menu item -->
    <menuitem name="Biblioteca" id="biblioteca_menu_root" web_icon="biblioteca_prueba,static/description/icon.png"/>
    
    <!-- Menu categories -->
    <menuitem name="Gestión de Contenido" id="biblioteca_menu_content" parent="biblioteca_menu_root"/>
    <menuitem name="Gestión de Préstamos" id="biblioteca_menu_loans" parent="biblioteca_menu_root"/>
    <menuitem name="Administración" id="biblioteca_menu_admin" parent="biblioteca_menu_root"/>
    
    <!-- Content submenu -->
    <menuitem name="Libros" id="biblioteca_menu_libros" parent="biblioteca_menu_content" 
              action="biblioteca_libro_action"/>
    <menuitem name="Autores" id="biblioteca_menu_autores" parent="biblioteca_menu_content" 
              action="biblioteca_autor_action"/>
    <menuitem name="Editoriales" id="biblioteca_menu_editoriales" parent="biblioteca_menu_content" 
              action="biblioteca_editorial_action"/>
    
    <!-- Loans submenu -->
    <menuitem name="Préstamos" id="biblioteca_menu_prestamos" parent="biblioteca_menu_loans" 
              action="biblioteca_prestamo_action"/>
    <menuitem name="Multas" id="biblioteca_menu_multas" parent="biblioteca_menu_loans" 
              action="biblioteca_multa_action"/>
    
    <!-- Admin submenu -->
    <menuitem name="Usuarios" id="biblioteca_menu_usuarios" parent="biblioteca_menu_admin" 
              action="biblioteca_usuario_action"/>
    <menuitem name="Personal" id="biblioteca_menu_personal" parent="biblioteca_menu_admin" 
              action="biblioteca_personal_action"/>

  </data>
</odoo>
